    <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Form edit Produk</h1>
            </div>
               
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Form edit Produk</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
  
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <!-- left column -->
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">EDIT PRODUK</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <%
                if (data.length) {
                for (var i=0; i < data.length; i++) {
                %>
                <form role="form" action="/express/admin/edit_produkproses/:id_product" enctype="multipart/form-data" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nama Produk</label>
                      <input type="text" class="form-control" name="nama_p" id="exampleInputEmail1" value="<%= data[i].name_product%>" placeholder="Enter title">
                      <input type="hidden" value="<%= data[i].id_product%>" name="id_product">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Kategori</label>
                      <input type="text" class="form-control" name="kategori" id="exampleInputPassword1" value="<%= data[i].kategori%>" placeholder="Deskripsi">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Slug</label>
                      <input type="text" class="form-control" name="slug_p" id="exampleInputPassword1" value="<%= data[i].slug%>" placeholder="Deskripsi">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputFile">Gambar Produk</label>
                      <div class="input-group">
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" name="image" id="exampleInputFile">
                          <input type="hidden" value="<%= data[i].gambar_product%>" name="image_old" class="custom-file-input">
                          <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                        <div class="input-group-append">
                          <span class="input-group-text" type="submit" id="input">Upload</span>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Harga Normal</label>
                      <input type="text" class="form-control" name="normal_p" id="exampleInputPassword1" value="<%= data[i].price_normal%>" placeholder="Deskripsi">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Harga Coret</label>
                      <input type="text" class="form-control" name="coret_p" id="exampleInputPassword1" value="<%= data[i].price_discount%>" placeholder="Deskripsi">
                    </div>
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <input type="submit" class="btn btn-primary" value="submit">
                  </div>
                </form>
                <% } } %>
              </div>
              </div>
              </div>
              </div>
              </section>
              <!-- /.card -->